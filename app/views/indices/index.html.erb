<h1>Listing indices</h1>

<table>
  <thead>
    <tr>
      <th>Current date</th>
      <th>Upshot</th>
      <th>Closing price</th>
      <th>Opening price</th>
      <th>Advance</th>
      <th>Decline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @indices.each do |index| %>
      <tr>
        <td><%= index.current_date %></td>
        <td><%= index.upshot %></td>
        <td><%= index.closing_price %></td>
        <td><%= index.opening_price %></td>
        <td><%= index.advance %></td>
        <td><%= index.decline %></td>
        <td><%= link_to 'Show', index %></td>
        <td><%= link_to 'Edit', edit_index_path(index) %></td>
        <td><%= link_to 'Destroy', index, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

